<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Les Germ√©s Admin</title>

    <!-- Bootstrap -->
    <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="{{ asset('node_modules/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
    <!-- NProgress -->
    <link href="{{ asset('node_modules/nprogress/nprogress.css') }}" rel="stylesheet">
    <!-- PNotify -->
    <link href="{{ asset('node_modules/pnotify/dist/pnotify.css') }}" rel="stylesheet">
    <link href="{{ asset('node_modules/pnotify/dist/pnotify.buttons.css') }}" rel="stylesheet">
    <link href="{{ asset('node_modules/pnotify/dist/pnotify.nonblock.css') }}" rel="stylesheet">

    {% block head %}
    {% endblock %}

    <!-- Custom Theme Style -->
    <link href="{{ asset('admin/css/custom.css') }}" rel="stylesheet">
    <link href="{{ asset('admin/css/style.css') }}" rel="stylesheet">
</head>

<body class="nav-md">
<div class="container body">
    <div class="main_container">

        {% include 'AdminBundle:Layouts:side_menu.html.twig' %}

        {% include 'AdminBundle:Layouts:top_menu.html.twig' %}

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ title }}</h3>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>{{ title }}{% if subTitle is defined %} {{ subTitle }}{% endif %}</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    {% block panel_toolbox %}
                                    {% endblock %}
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                {% block body %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
                {% block extraPanels %}
                {% endblock %}
            </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
            <div class="pull-right">
                Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
            </div>
            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>
</div>

{% block modals %}
{% endblock %}

<!-- jQuery -->
<script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
<!-- Bootstrap -->
<script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<!-- FastClick -->
<script src="{{ asset('node_modules/fastclick/lib/fastclick.js') }}"></script>
<!-- NProgress -->
<script src="{{ asset('node_modules/nprogress/nprogress.js') }}"></script>
<!-- PNotify -->
<script src="{{ asset('node_modules/pnotify/dist/pnotify.js') }}"></script>
<script src="{{ asset('node_modules/pnotify/dist/pnotify.buttons.js') }}"></script>
<script src="{{ asset('node_modules/pnotify/dist/pnotify.nonblock.js') }}"></script>

{% block scripts %}
{% endblock %}

<!-- Custom Theme Scripts -->
<script src="{{ asset('admin/js/custom.js') }}"></script>
<script src="{{ asset('admin/js/script.js') }}"></script>
</body>
</html>
