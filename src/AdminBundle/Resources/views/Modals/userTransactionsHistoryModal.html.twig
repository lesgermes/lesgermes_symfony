<div id="userTransactionsHistoryModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">User Transactions History</h4>
            </div>
            <div class="modal-body">
                <h4>User Info</h4>
                <ul>
                    <li><strong>Name:</strong> {{ user.firstName }} {{ user.lastName }}</li>
                    <li><strong>Email:</strong> {{ user.email }}</li>
                </ul>

                <h4>User Transactions History</h4>

                <table id="datatable1" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Content</th>
                        <th>Previous Amount</th>
                        <th>Amount</th>
                        <th>New Amount</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for transaction in transactions %}
                        <tr>
                            <!-- Date -->
                            <td>{{ transaction.date | date('d-M-Y H:i:s') }}</td>
                            <!-- Content -->
                            <td>{{ transaction.content }}</td>
                            <!-- Previous Amount -->
                            <td>{{ transaction.previousAmount }}</td>
                            <!-- Amount -->
                            <td>{{ transaction.amount }}</td>
                            <!-- New Amount -->
                            <td>{{ transaction.newAmount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>