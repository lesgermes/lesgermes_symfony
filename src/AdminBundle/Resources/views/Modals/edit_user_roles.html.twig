<div id="editUserRolesModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit User Roles</h4>
            </div>
            <div class="modal-body">
                <h4>User Info</h4>
                <ul>
                    <li><strong>Name:</strong> {{ user.firstName }} {{ user.lastName }}</li>
                    <li><strong>Email:</strong> {{ user.email }}</li>
                </ul>

                <h4>User Roles</h4>

                <div class="row">
                    <div class="col-xs-2"><label for="rolesSelect">Roles:</label></div>
                    <div class="col-xs-6">
                        <select class="form-control" id="rolesSelect">
                            {% for role in roles %}
                            <option>{{ role }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xs-3">
                        <button type="button" class="btn btn-primary" onclick="addUserRole({{ user.id }}, $('#rolesSelect').val());">Ajouter</button>
                    </div>
                </div>

                <ul class="list-group" id="userRoles">
                    {% for role in user.roles %}
                    <li class="list-group-item">
                        {{ role }}
                        <button type="button" class="btn btn-danger btn-xs deleteRoleButton" onclick="deleteUserRole({{ user.id }}, '{{ role }}');">Supprimer</button>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>