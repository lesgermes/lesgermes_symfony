<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for mediaType in mediaTypes %}
        <tr data-mediaTypeId="{{ mediaType.id }}">
            <!-- Name -->
            <td>{{ mediaType.name }}</td>
            <!-- Actions -->
            <td class="actionButtons">
                <a href="#" role="button" onclick="openEditMediaTypeModal(event, {{ mediaType.id }})"><i class="fa fa-wrench"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>